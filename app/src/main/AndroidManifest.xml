<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tripko">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity
            android:name=".ui.trips.TripsActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.schedule.ScheduleActivity" />
        <activity android:name=".ui.schedule.details.seat.ActivitySeatSelectionRegular" />
        <activity android:name=".ui.schedule.details.seat.ActivitySeatSelectionFirstClass" />
        <activity android:name=".ui.schedule.details.BookingActivity" />
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".ui.tripStatus.TripStatusActivity" />
        <activity android:name=".ui.trips.detail.TripDetailActivity" />
    </application>

</manifest>